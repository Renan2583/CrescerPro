<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src = "/js/cadastrar.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Atividade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-fluid vh-100 d-flex flex-column">
       
        <div class="row flex-grow-1">
            <div class="col-12 p-4">
                <div class="card shadow h-100">
                    <div class="card-body border p-3">
                        <h5 class="fw-bold">Criar Nova Atividade</h5>

                        <!-- Nome da Matéria -->
                        <div class="mb-3">
                            <label for="materia" class="form-label">Matérias</label>
                            <select id="materia" name="materia" class="form-control">
                                <option value="algoritmos">Matematica</option>
                                <option value="sistemas_operacionais">Língua Portuguesa</option>
                                <option value="redes_computadores">Geografia</option>
                                <option value="banco_de_dados">História</option>
                                <option value="inteligencia_artificial">Ciências</option>
                            </select>
                        </div>

                        <!-- Prazo de Entrega -->
                        <label for="prazoInput" class="form-label fw-bold mt-2">Prazo de Entrega</label>
                        <input type="date" class="form-control" id="prazoInput" name="prazoInput">

                        <!-- Descrição da Atividade -->
                        <label for="descricaoInput" class="form-label fw-bold mt-2">Descrição da Atividade</label>
                        <textarea class="form-control" id="descricaoInput" name="descricaoInput" rows="4" placeholder="Explique o que deve ser feito"></textarea>
                    </div>

                    <!-- Botão para publicar a atividade -->
                    <div class="card-footer border p-3">
                        <button class="btn btn-primary w-100" id="btn-cadastrar">Publicar Atividade</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
